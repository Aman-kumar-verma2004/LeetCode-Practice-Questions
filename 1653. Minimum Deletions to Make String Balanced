class Solution {
    public int minimumDeletions(String s) {
        int bCount = 0;
        int deletion = 0;
        for(char c : s.toCharArray()){
            if(c == 'b'){
                bCount++;
            }else{
                deletion = Math.min(deletion + 1, bCount);
            }
        }
        return deletion;
    }
}
